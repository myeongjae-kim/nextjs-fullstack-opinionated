{
  "name": "hono-deno-opinionated-on-labmda",
  "exports": "./app/index.ts",
  "imports": {
    "@/": "./",
    "@felix/bcrypt": "jsr:@felix/bcrypt@^1.0.8",
    "@hono/zod-openapi": "npm:@hono/zod-openapi@^1.2.0",
    "@std/assert": "jsr:@std/assert@^1.0.16",
    "@std/cli": "jsr:@std/cli@^1.0.25",
    "@std/expect": "jsr:@std/expect@^1.0.17",
    "@std/testing": "jsr:@std/testing@^1.0.16",
    "@std/ulid": "jsr:@std/ulid@^1.0.0",
    "drizzle-kit": "npm:drizzle-kit@^0.31.8",
    "drizzle-orm": "npm:drizzle-orm@^0.45.1",
    "hono": "jsr:@hono/hono@^4.11.4",
    "inversify-typesafe-spring-like": "jsr:@myeongjae-kim/inversify-typesafe-spring-like@^0.5.4",
    "jsonwebtoken": "npm:jsonwebtoken@^9.0.3",
    "minimatch": "npm:minimatch@^10.1.1",
    "mysql2": "npm:mysql2@^3.16.1",
    "pactum": "npm:pactum@^3.9.0",
    "zod": "npm:zod@^4.3.5"
  },
  "tasks": {
    "setup": "deno run -A lib/setup.ts",
    "dev": "deno run -A --watch --env-file=.env app/index.ts",
    "start": "deno run -A --env-file=.env app/index.ts",
    "_start": "deno task start --port=3031",
    "test": "deno test -A --ignore='**/*.int.test.*'",
    "_intTest": "deno test -A --env-file=.env --ignore='**/*.unit.test.*' test/",
    "intTest": "start-server-and-test 'deno task _start' http://localhost:3031 'deno task _intTest'",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:local": "drizzle-kit migrate --config=drizzle.config.local.ts",
    "db:studio": "drizzle-kit studio",
    "build": "bash infra/build-image.sh",
    "run-image": "bash infra/run-image-on-local.sh",
    "detect-runtime-downloads": "deno run -A infra/detect-runtime-downloads.ts"
  },
  "compilerOptions": {
    "experimentalDecorators": true
  },
  "nodeModulesDir": "none"
}
