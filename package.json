{
  "name": "nextjs-fullstack-opinionated",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "next dev",
    "setup": "npx tsx lib/setup.ts",
    "build": "next build",
    "start": "next start",
    "_start": "next start -p 3031",
    "lint": "tsc --noEmit && eslint",
    "vitest": "vitest --fileParallelism=false",
    "test": "vitest --exclude '**/*.int.test.*' --reporter tree",
    "_intTest": "vitest run int.test --reporter tree --fileParallelism=false",
    "intTest": "pnpm run build && start-server-and-test _start http://localhost:3031 _intTest",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:local": "drizzle-kit migrate --config=drizzle.config.local.ts",
    "db:studio": "drizzle-kit studio",
    "_sync-api": "npx openapi-typescript http://localhost:3031/api/swagger -o ./lib/api/schema.d.ts",
    "sync-api": "pnpm run build && start-server-and-test _start http://localhost:3031 _sync-api"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.2.0",
    "@hono/zod-validator": "^0.7.6",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@tanstack/react-query": "^5.90.16",
    "bcrypt": "^6.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.3",
    "inversify-typesafe-spring-like": "^0.5.5",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.562.0",
    "minimatch": "^10.1.1",
    "mysql2": "^3.11.5",
    "next": "16.1.1",
    "openapi-fetch": "^0.15.0",
    "openapi-react-query": "^0.5.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "^7.71.0",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0",
    "ulid": "^3.0.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.1",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.2",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "jsdom": "^27.4.0",
    "openapi-typescript": "^7.10.1",
    "pactum": "^3.9.0",
    "start-server-and-test": "^2.1.3",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "typescript-eslint": "^8.52.0",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16"
  }
}