{
  "name": "nextjs-fullstack-opinionated",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "vite --port 8080",
    "setup": "npx tsx lib/setup.ts",
    "lint": "eslint .",
    "build": "pnpm lint && pnpm clean && tsc -p tsconfig.build.json && tsc-alias && ts2mjs dist --remove-source",
    "clean": "rm -rf dist",
    "start": "node --env-file=.env dist/app/index.mjs",
    "_start": "node --env-file=.env dist/app/index.mjs --port 3031",
    "vitest": "vitest --fileParallelism=false",
    "test": "vitest --exclude '**/*.int.test.*' --reporter tree",
    "_intTest": "vitest run int.test --reporter tree --fileParallelism=false",
    "intTest": "pnpm run build && start-server-and-test _start http://localhost:3031 _intTest",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:local": "drizzle-kit migrate --config=drizzle.config.local.ts",
    "db:studio": "drizzle-kit studio",
    "_sync-api": "npx openapi-typescript http://localhost:3031/api/swagger -o ./lib/api/schema.d.ts",
    "sync-api": "pnpm run build && start-server-and-test _start http://localhost:3031 _sync-api"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@hono/zod-openapi": "^1.2.0",
    "@hono/zod-validator": "^0.7.6",
    "bcrypt": "^6.0.0",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.3",
    "inversify-typesafe-spring-like": "^0.5.5",
    "jsonwebtoken": "^9.0.2",
    "minimatch": "^10.1.1",
    "minimist": "^1.2.8",
    "mysql2": "^3.11.5",
    "ulid": "^3.0.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@hono/vite-dev-server": "^0.24.1",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/minimist": "^1.2.5",
    "@types/node": "^20",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9",
    "eslint-plugin-import": "^2.32.0",
    "pactum": "^3.9.0",
    "start-server-and-test": "^2.1.3",
    "ts2mjs": "^4.0.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5",
    "typescript-eslint": "^8.52.0",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16"
  }
}