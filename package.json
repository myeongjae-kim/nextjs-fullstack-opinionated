{
  "name": "nextjs-fullstack-opinionated",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "next dev",
    "setup": "npx tsx lib/setup.ts",
    "build": "pnpm run docs && next build",
    "start": "next start",
    "_start": "next start -p 3031",
    "lint": "eslint",
    "test": "vitest --exclude '**/*.int.test.*' --reporter tree",
    "_intTest": "vitest run int.test --reporter tree",
    "intTest": "npm run build && start-server-and-test _start http://localhost:3031 _intTest",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:local": "drizzle-kit migrate --config=drizzle.config.local.ts",
    "db:studio": "drizzle-kit studio",
    "docs": "npx @rcmade/hono-docs generate --config ./hono-docs.ts"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.3",
    "inversify-typesafe-spring-like": "^0.5.5",
    "minimatch": "^10.1.1",
    "next": "16.1.1",
    "postgres": "^3.4.8",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@rcmade/hono-docs": "^1.0.31",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.2",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "jsdom": "^27.4.0",
    "pactum": "^3.9.0",
    "start-server-and-test": "^2.1.3",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16"
  }
}